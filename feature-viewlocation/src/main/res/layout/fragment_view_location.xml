<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/text_day_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>

            <ImageView
                    android:id="@+id/image_weather_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_day_now"
                    android:layout_centerHorizontal="true"/>

            <TextView
                    android:id="@+id/text_temp_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_weather_now"
                    android:layout_centerHorizontal="true"/>

            <include
                    layout="@layout/item_day_forecast"
                    android:id="@+id/day_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_temp_now"
                    android:layout_toStartOf="@id/day_two"/>

            <include
                    layout="@layout/item_day_forecast"
                    android:id="@+id/day_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_temp_now"
                    android:layout_centerHorizontal="true"/>

            <include
                    layout="@layout/item_day_forecast"
                    android:id="@+id/day_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_temp_now"
                    android:layout_toEndOf="@id/day_two"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>